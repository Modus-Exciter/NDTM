<Window x:Class="LogAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LogAnalyzer"
        Title="Анализатор протокола"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="ThreeDBorderWindow"
        Height="346"
        Width="727.4"
        Icon="text_find.ico"
        TextOptions.TextFormattingMode="Display">
    <Window.DataContext>
        <local:TablePresenter />
    </Window.DataContext>
    <Window.Resources>
        <Style x:Key="{ComponentResourceKey ResourceId=DataGridSelectAllButtonStyle, TypeInTargetAssembly={x:Type DataGrid}}" TargetType="{x:Type Button}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="Silver" Offset="0"/>
                        <GradientStop Color="WhiteSmoke" Offset="0.3"/>
                        <GradientStop Color="Gray" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="DimGray"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <RadialGradientBrush RadiusX="1.5" GradientOrigin="0.4,0.5">
                                <GradientStop Color="Goldenrod"/>
                                <GradientStop Color="DimGray" Offset="1"/>
                            </RadialGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Menu">
            <Setter Property="Background" Value="DimGray"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background">
                <Setter.Value>
                    <RadialGradientBrush Center="0.3,0.4" RadiusX="1.6" GradientOrigin="0.4,0.15">
                        <GradientStop Color="Gainsboro" Offset="0"/>
                        <GradientStop Color="Gray" Offset="0.8"/>
                    </RadialGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridColumnHeader">
                        <Border  x:Name="FilterRow"
                                Background="{TemplateBinding Property=Background}" 
                                BorderBrush="{TemplateBinding Property=BorderBrush}" 
                                BorderThickness="{TemplateBinding Property=BorderThickness}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="{Binding}"
                                           Margin="{TemplateBinding Property=Padding}"/>
                                <Path x:Name="SortArrow" 
                                        Visibility="Collapsed" 
                                        Data="M 0,0 L 1,0 0.5,1 z" 
                                        Stretch="Fill"
                                        Stroke="DarkSlateGray"
                                        Fill="Silver"
                                        Grid.Column="1"
                                        Width="9"
                                        Height="7" 
                                        Margin="0,0,8,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        RenderTransformOrigin="0.5, 0.4">
                                </Path>
                                <TextBox Grid.Row="1"
                                         Grid.ColumnSpan="2"
                                         BorderThickness="0,0,0,3"
                                         TextChanged="FilterRow_TextChanged" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <RadialGradientBrush Center="0.3,0.4" RadiusX="1.6" GradientOrigin="0.4,0.15">
                                            <GradientStop Color="#FFFFF0CB" Offset="0"/>
                                            <GradientStop Color="#B9B7AC" Offset="0.3"/>
                                            <GradientStop Color="Gray" Offset="0.8"/>
                                        </RadialGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="SortDirection" Value="Ascending">
                                <Setter TargetName="SortArrow" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="SortArrow" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="180"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="SortDirection" Value="Descending">
                                <Setter TargetName="SortArrow" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="HasContent" Value="False">
                                <Setter TargetName="FilterRow" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
            </Style.Triggers>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="WhiteSmoke" Offset="0"/>
                        <GradientStop Color="#FFCDD5E0" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border Padding="3"
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Background="{TemplateBinding Background}" 
                                SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="CornflowerBlue"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="White" Offset="0"/>
                                <GradientStop Color="#FFD2DAE5" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="RoyalBlue"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Background="Silver">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Открыть конфигурационный файл" Click="OpenConfig_Click" Margin="0,0,20,0"/>
            <MenuItem Header="Открыть файл протокола" Click="OpenFile_Click"/>
        </Menu>
        <ListBox Grid.Row="1" 
                 BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                 ItemsSource="{Binding Path=OpenedFiles}" 
                 SelectedItem="{Binding Path=CurrentFile}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" Background="DimGray" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.Resources>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate>
                                    <Border x:Name="tab1"
                                            TextBlock.Foreground="White"
                                            CornerRadius="5,5,0,0"
                                            BorderThickness="0" 
                                            BorderBrush="LightGray"
                                            Padding="10,0,5,5">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding}" VerticalAlignment="Center" />
                                        <Button Content="×"
                                                VerticalAlignment="Top"
                                                FontSize="15"
                                                Margin="10,0,0,5"
                                                Padding="0"
                                                Click="MenuItemClose_Click"
                                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                                    </StackPanel>
                                    </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="ListBoxItem.IsSelected" Value="True">
                                        <Setter TargetName="tab1" Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                    <GradientStop Color="White" Offset="0"/>
                                                    <GradientStop Color="Silver" Offset="0.4"/>
                                                    <GradientStop Color="LightGray" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter TargetName="tab1" Property="BorderThickness" Value="1,1,1,0"/>
                                        <Setter TargetName="tab1" Property="TextBlock.Foreground" Value="Black"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                    </Style.Triggers>
                </Style>
            </ListBox.Resources>
        </ListBox>
        <DataGrid Grid.Row="2"
                  Background="Silver"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  GridLinesVisibility="Vertical"
                  VerticalGridLinesBrush="Gray"
                  AutoGeneratedColumns="DataGrid_AutoGeneratedColumns"
                  ItemsSource="{Binding Path=LoadedTable}">
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=Level}" Value="Fatal">
                            <Setter Property="Foreground" Value="Crimson"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=Level}" Value="Error">
                            <Setter Property="Foreground" Value="Red"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=Level}" Value="Warning">
                            <Setter Property="Foreground" Value="Coral"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=Level}" Value="Info">
                            <Setter Property="Foreground" Value="Blue"/>
                        </DataTrigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="Foreground" Value="RoyalBlue"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>
        </DataGrid>
        <Border HorizontalAlignment="Stretch" Height="5" Grid.Row="3" CornerRadius="3">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="Gray" Offset="0"/>
                    <GradientStop Color="Gainsboro" Offset="0.4"/>
                    <GradientStop Color="#444444" Offset="0.8"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Grid Background="DimGray" TextBlock.Foreground="White" Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="10,10,0,10" Orientation="Vertical" Grid.Column="0">
                <TextBlock Margin="0,0,0,5" FontWeight="Bold">Шаблон сообщения:</TextBlock>
                <TextBlock Text="{Binding Path=MessageTemplate}"/>
                <TextBlock Text="{Binding Path=Separator}"/>
            </StackPanel>
            <Rectangle />
            <StackPanel Orientation="Vertical" Grid.Column="2" Margin="0,0,10,0">
                <TextBlock Margin="0,10,0,5" FontWeight="Bold">Файл протокола:</TextBlock>
                <TextBlock Text="{Binding Path=FileName}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
