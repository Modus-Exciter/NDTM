<Application x:Class="FeuerzauberGraphicalTest.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:conv="clr-namespace:Notung.Feuerzauber.Converters;assembly=Notung.Feuerzauber"
            xmlns:local="clr-namespace:FeuerzauberGraphicalTest"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Notung.Feuerzauber;component/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Notung.Feuerzauber;component/Styles/GridStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Notung.Feuerzauber;component/Styles/WindowStyles.xaml"/>
                <ResourceDictionary>
                    <conv:GoldenRatioConverter x:Key="goldenRatio"/>
                    <conv:ImageToBitmapSourceConverter x:Key="imageConverter"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
